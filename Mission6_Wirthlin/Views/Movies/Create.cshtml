@model Mission6_Wirthlin.Models.Movie

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Add Movie";
}

<h1>Add a New Movie</h1>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        <label asp-for="Category"></label>
        <input asp-for="Category" />
        <span asp-validation-for="Category"></span>
    </div>
    <div>
        <label asp-for="Director"></label>
        <input asp-for="Director" />
        <span asp-validation-for="Director"></span>
    </div>
    <div>
        <label asp-for="Rating"></label>
        <select asp-for="Rating">
            <option value="">-- Select Rating --</option>
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R</option>
        </select>
        <span asp-validation-for="Rating"></span>
    </div>
    <div>
        <label asp-for="Edited"></label>
        <select asp-for="Edited">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <span asp-validation-for="Edited"></span>
    </div>
    <div>
        <label asp-for="LentTo"></label>
        <input asp-for="LentTo" />
        <span asp-validation-for="LentTo"></span>
    </div>
    <div>
        <label asp-for="Notes"></label>
        <input asp-for="Notes" maxlength="25" />
        <span asp-validation-for="Notes"></span>
    </div>
    <div>
        <button type="submit">Add Movie</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}